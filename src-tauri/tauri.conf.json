{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Droid Switch",
  "version": "1.0.0",
  "identifier": "com.zhiNian.factory-ai-droid-switch",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Droid Switch - Factory AI Key 管理工具",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "decorations": true,
        "transparent": false,
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Developer Tool",
    "shortDescription": "Factory AI API Key 管理工具",
    "longDescription": "一个便捷的 Factory AI API Key 管理工具，支持多个 API Key 的快速切换、余额查询和环境变量管理。"
  }
}